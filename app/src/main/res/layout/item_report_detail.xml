<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_300px"
    android:layout_marginLeft="@dimen/_8px"
    android:layout_marginRight="@dimen/_11px"
    app:cardBackgroundColor="@color/color_ffffff"
    app:cardCornerRadius="@dimen/_4px"
    app:cardElevation="@dimen/_8px"
    app:cardMaxElevation="@dimen/_8px"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_user_card">


        <LinearLayout
            android:id="@+id/report_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_20px"
            android:layout_marginTop="@dimen/_15px"
            android:layout_marginBottom="@dimen/_20px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_16px"
                android:layout_marginTop="@dimen/_10px"
                android:textSize="@dimen/_25pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_16px"
                android:layout_marginTop="@dimen/_10px"
                android:textSize="@dimen/_25pt"
                android:textStyle="bold"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/alert_image"
            android:layout_width="@dimen/_100px"
            android:layout_height="@dimen/_100px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_20px"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_alert"
            android:visibility="gone"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>